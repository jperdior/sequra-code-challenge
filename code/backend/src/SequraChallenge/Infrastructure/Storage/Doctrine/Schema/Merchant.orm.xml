<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\SequraChallenge\Domain\Entity\Merchant" table="merchant" read-only="false"
            repository-class="App\SequraChallenge\Infrastructure\Storage\Doctrine\Repository\MerchantRepository">

        <id name="id" column="id" type="string" length="36" >
        </id>

        <field name="reference" column="reference" type="string" length="255" />
        <field name="email" column="email" type="string" length="255" />
        <field name="liveOn" column="live_on" type="datetime" />

        <field name="disbursementFrequency" column="disbursement_frequency" type="integer"/>
        <field name="minimumMonthlyFee" column="minimum_monthly_fee" type="float" />

    </entity>
</doctrine-mapping>
