<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\SequraChallenge\Domain\Entity\CancellationLine" table="cancellation_line" read-only="false"
            repository-class="App\SequraChallenge\Infrastructure\Storage\Doctrine\Repository\CancellationLineRepository">

        <id name="id" column="id" type="string" length="26" >
        </id>

        <many-to-one field="disbursement" target-entity="App\SequraChallenge\Domain\Entity\Disbursement">
            <join-column name="disbursement_id" referenced-column-name="id" />
        </many-to-one>

        <many-to-one field="disbursementLine" target-entity="App\SequraChallenge\Domain\Entity\DisbursementLine">
            <join-column name="disbursement_line_id" referenced-column-name="id" />
        </many-to-one>

        <field name="amount" column="amount" type="float" />

        <field name="createdAt" column="created_at" type="datetime" />

    </entity>
</doctrine-mapping>
