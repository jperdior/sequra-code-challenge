<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\SequraChallenge\Domain\Entity\Purchase" table="purchase" read-only="false"
            repository-class="App\SequraChallenge\Infrastructure\Storage\Doctrine\Repository\PurchaseRepository">

        <id name="id" column="id" type="string" length="36" >
        </id>

        <many-to-one field="merchant" target-entity="App\SequraChallenge\Domain\Entity\Merchant">
            <join-column name="merchant_id" referenced-column-name="id" />
        </many-to-one>

        <field name="amount" column="amount" type="float" />

        <field name="createdAt" column="created_at" type="datetime" />

        <field name="status" column="status" type="integer" nullable="false"/>

    </entity>
</doctrine-mapping>
